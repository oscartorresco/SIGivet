{% extends 'SIGivetBundle::menu.html.twig' %}
{%  block title %}
SIGivet
{% endblock %}

{% block miga %}
<ul class="breadcrumb trim">
	<li><a href="">Inicio</a> <span class="divider">/</span></li>
	<li class="active">Proyecto</li>
</ul>
{% endblock %}

{% block contenido %}
<div class="well whites">
	<a id="show-toast-button"  data-toggle="modal" href="#myModal" type="submit" class="btn btn-success"><i class="fa fa-plus-square"></i> Nuevo proyecto</a>
	<h4 class="align-center"><strong>LISTA DE PROYECTOS</strong></h4>	
	<table class="table table-bordered">
		<tr>
			<th><strong>Proyecto</strong></th>
			<th><strong>Fecha</strong></th>
			<th><strong>Tipo proyecto</strong></th>
			<th><strong>Municipio</strong></th>
			<th><strong>Ver datos</strong></th>
			<th><strong>Descargar</strong></th>
		</tr>
        <tbody class="tabla">
        	<tr  style="cursor:pointer;">
				<td id=""></td>
				<td id=""></td>
				<td id=""></td>
				<td id=""></td>
				<td id=""></td>
				<td id=""></td>
			</tr>
        </tbody>
   </table>
   <div class="pagination pagination-centered">
   <ul class="pager">
     <li class="previous"><a href="#"></a></li>
     <li class="next"><a href="#"></a></li>
   </ul>
   </div>
</div>
<div id="myModal" class="modal hide fade">
	<div class="modal-header well">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
		<h3 id="myModalLabel" class="align-center"><strong> AGREGAR NUEVO PROYECTO</strong></h3>
    </div>
    <div class="modal-body">
        <form>
            <div class="row">
                <div class="span3"><label class="muted"><strong>Fecha:</strong></label></div>
                <div data-date-format="dd-mm-yyyy" data-date="12-02-2012" id="dp3" class="input-append date" data-provide="datepicker">
                    <input style="width:232px" type="text" readonly="" value="12-02-2012" size="16" class="span2">
                    <span class="add-on"><i class="fa fa-calendar"></i></span>
                </div>
            </div>
            <div class="row">
                <div class="span3"><label class="muted"><strong>Tipo proyecto:</strong></label></div>
                <div>
                   <select style="width:260px">
                        <option>Seleccionar</option>
                    </select> 
                </div>
            </div>
            <div class="row">
                <div class="span3"><label class="muted"><strong>Objetivo del proyecto:</strong></label></div>
                <div><textarea rows="3"></textarea></div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
    	<button class="btn btn-success">Agregar</button>
        <button class="btn" data-dismiss="modal">Cancelar</button>
    </div>
</div>
{% endblock %}